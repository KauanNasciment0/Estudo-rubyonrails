<h1>Editar Perfil</h1>

<%= form_with model: @user do |f| %>

  <div>
    <%= f.label :name, "Nome Completo" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email, "E-mail" %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password, "Nova Senha (deixe vazio para nÃ£o alterar)" %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Confirme a Nova Senha" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "Atualizar Conta" %>
  </div>
<% end %>
<div class="danger-zone">
  <%= button_to "Excluir minha conta", @user,
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza absoluta?" },
                class: "btn-danger" %>
</div>
<%= link_to "Cancelar", root_path %>